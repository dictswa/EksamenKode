
relationships = []

for file in files:
    text = open('sinti-en-roma-namenlijst/'+"184045-Elisabeth Berger-Weiss.html",'r',encoding='utf-8').read()
    soup = BeautifulSoup(text,features="lxml")
    names = soup.findAll('div',attrs={'class':'c-warvictim-family-tree'})
    for name in names:
        relations = name.findAll('div',attrs={'class':"c-warvictim-family-tree__block"})
        for relation in relations:
            rel_gens = relation.findAll('h3',attrs={'class':'c-warvictim__subtitle'})
            for rel_gen in rel_gens:
                general_type = rel_gen.text
                if general_type != None:
                    people = relation.findAll('h4',attrs={'class':'c-card-family__title'})
                    specific_type = relation.findAll('div',attrs={'class':'c-card-family__relation'})
                    for i in range(len(people)):
                        print(specific_type[i])
                        pID = file.split("-")[0]
                        link = people[i].find('a')
                        rID = link['href'].split("/")[-2]
                        specific_type = specific_type[i]
                        relationships.append([pID,rID,general_type,specific_type])
                else:
                    print('neeeeeeeeeeej')
